<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.sykesdev.highwatch" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HighWatch</name>
    <description>
        Highwatch traffic monitoring application for Android/IOS/Browsers.
    </description>
    <author email="ben@sykesdev.ca" href="http://sykesdev.ca">
        Benjamin Sykes
    </author>
    <author>
        Liam Stickney
    </author>
    <author>
        Malik Sheharyaar Talhat
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-indent href="file:///*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-http" spec="^1.2.0" />
    <engine name="browser" spec="^5.0.4" />
    
    <universal-links>
        <host name="highwatch.page.link/3Q85" scheme="https" />
        <host name="high-watch.firebaseapp.com" scheme="https">
            <path url="/__/auth/callback"/>
        </host>
    </universal-links>
    
    <preference name="AndroidLaunchMode" value="singleTask" />
    <preference name="android-minSdkVersion" value="26" />
</widget>


